<div class="card session--form">
  <header role="banner" class="card--header yellow">
    <%= image_tag 'logos/logo-white.svg' %>
  </header>
  <div class="card--body">
    <%= Launch::Component::Alert::Banner.new(warning_message: alert, success_message: notice).html %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), role: 'form') do |f| %>
      <fieldset class="fiedset">
        <%= f.label :email, "Email Address" %>
        <%= f.email_field :email, placeholder: 'john@loadbuddy.com', autofocus: true %>
      </fieldset>
      <fieldset class="fieldset">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: '••••••••', autocomplete: "off" %>
      </fieldset>
      <fieldset class="fieldset fieldset--action">
        <%= f.submit 'Sign In', class: 'button button--primary', role: 'button' %>
      </fieldset>
    <% end %>
    <footer role="contentinfo" class="card--footer">
      <ul class="session--links">
        <li> <%= link_to "Create an account", new_registration_path(resource_name) %></li>
        <li> <%= link_to "Forgot your password", new_password_path(resource_name) %></li>
      </ul>
    </footer>
  </div>
</div>
